<h1>List of All Competition</h1>

<table class="table">
  <thead>
    <th>Caption</th>
    <th>League</th>
    <th>Year</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @all_competitions.each do |competition| %>
      <tr>
        <td><%= competition["caption"] %></td>
        <td><%= competition["league"] %></td>
        <td><%= competition["year"] %></td>
        <td><%= link_to "Show teams", teams_path(competition_id: competition["id"]) %></td>
        <td><%= link_to "Show league table", leagues_path(competition_id: competition["id"]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>  