<!DOCTYPE html>
<html>
  <head>
    <title>FootballApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      body, html {
        height: 100%;
      }
      .bg { 
          /* The image used */
          background-image: url(<%= asset_path "background.jpg" %>);

          /* Full height */
          height: 100%; 

          /* Center and scale the image nicely */
          background-position: center;
          background-repeat: no-repeat;
          background-size: cover;
      }
      .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
      }
      .bg2 {
          color: white;
          /* The image used */
          background-image: url(<%= asset_path "background2.jpg" %>);

          /* Full height */
          height: 100%; 

          /* Center and scale the image nicely */
          background-position: center;
          background-repeat: no-repeat;
          background-size: cover;
      }
      .bg2 a{color: white;}

    </style>
    <%= javascript_pack_tag 'application' %>
  </head>

  <% if user_signed_in? %>
    <body class="">
      <div class="container">

        <%= link_to "Log out", destroy_user_session_path %>
        |
        <%= link_to "Home", root_path %>
        <%= yield %>
      </div>
    </body>
  <% else %>
    <body>
      <%= yield %>
    </body>
  <% end %>

</html>
